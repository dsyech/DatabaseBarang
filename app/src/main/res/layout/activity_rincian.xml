<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="UBAH BARANG"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rincianSku"
        android:layout_gravity="center_horizontal"
        android:hint="SKU.."
        android:enabled="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rincianNama"
        android:layout_gravity="center_horizontal"
        android:hint="Nama.."
        android:enabled="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rincianStok"
        android:layout_gravity="center_horizontal"
        android:hint="Stok..."
        android:enabled="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rincianSatuan"
        android:layout_gravity="center_horizontal"
        android:hint="Harga Satuan..."
        android:enabled="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rincianGambar"
        android:layout_gravity="center_horizontal"
        android:hint="Gambar (eg : img1)..."
        android:enabled="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIMPAN"
        android:id="@+id/btnSimpanUbah"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:onClick="clickBtnSimpanUbah" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UBAH"
        android:id="@+id/btnUbah"
        android:layout_gravity="center_horizontal"
        android:onClick="clickBtnUbah" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hapus"
        android:id="@+id/btnHapus"
        android:layout_gravity="center_horizontal"
        android:onClick="clickBtnHapus" />
</LinearLayout>